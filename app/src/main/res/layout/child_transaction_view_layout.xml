<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        app:strokeColor="@color/textColor"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:clipToOutline="true">

      <FrameLayout
            android:id="@+id/frame_layout"
            android:background="@color/success_green"
            android:layout_width="5dp"
            android:layout_margin="0dp"
            android:layout_height="match_parent">

      </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Payment Successful"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:inputType="number"
                android:text="10000"
                android:layout_marginStart="2dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_txn_id1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Txn Id"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/txt_title"
                android:textColor="#0d476d"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_txn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/txt_title"
                android:layout_toRightOf="@+id/txt_txn_id1"
                android:text="421011345263764"
                android:textColor="#666"
                android:textSize="14sp"/>



            <TextView
                android:id="@+id/txt_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_txn_id1"
                android:layout_marginTop="8dp"
                android:text="Date"
                android:textColor="#0d476d"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_txn_id"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/txt_txn_id1"
                android:text="26-10-2024"
                android:textColor="#666"
                android:textSize="14sp"/>

<!--            <TextView-->
<!--                android:id="@+id/txt_time"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/txt_txn_id"-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:layout_toRightOf="@+id/txt_date"-->
<!--                android:text="8:30 pm"-->
<!--                android:textColor="#666"-->
<!--                android:textSize="14sp"/>-->

            <ImageView
                android:id="@+id/document_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_more_vert"
                android:layout_below="@+id/txt_txn_id"
                android:textAlignment="textEnd"
                />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>